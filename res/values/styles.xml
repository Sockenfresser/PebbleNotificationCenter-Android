<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">#EEEEEE</item>
        <item name="colorPrimaryDark">#888888</item>

        <item name="android:actionModeCutDrawable">@drawable/ic_content_content_cut</item>
        <item name="android:actionModeCopyDrawable">@drawable/ic_content_content_copy</item>
        <item name="android:actionModePasteDrawable">@drawable/ic_content_content_paste</item>
        <item name="android:actionModeSelectAllDrawable">@drawable/ic_content_select_all</item>
        <item name="android:actionModeShareDrawable">@drawable/ic_social_share</item>

    </style>

    <style name="AppSettingsBackground">
        <item name="android:background">@android:color/white</item>
    </style>
    
    <style name="AppSettingParent">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="AppSettingsName">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppSettingsDesc">
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="AppSettingSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="AppSettingsSectionText">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppSettingsSectionSeparator" parent="AppSettingSeparator">
        <item name="android:background">#555555</item>
    </style>

    <style name="AppSettingsRegexListSeparator" parent="AppSettingSeparator">
        <item name="android:background">#DDDDDD</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>


</resources>
